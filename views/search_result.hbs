<html class="wf-sourcesanspro-n6-active wf-sourcesanspro-n4-active wf-playfairdisplay-n7-active wf-active"
        lang="eng">
    <header>
        <meta charset="UTF-8">
        <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
        
        <title>
            {{title}}
        </title>
    </head>
    <body class="home page-template-default page page-id-7 wp-embed-responsive theme-blogxer woocommerce-js header-style-1 footer-style-1 no-sidebar right-sidebar product-grid-view elementor-default elementor-page elementor-page-7 top">
    
    <div class="header">
        <h1> Welcome, <b> {{username}} </b></h1>
        <p> Record you daily life on YouStar <span class="glyphicon glyphicon-comment"></span></p>
    </div>
    <div id="add-post-div" class="container">
            
        <!-- BACK TO LIST -->
        <a href='/main' id="back-to-list" class="glyphicon glyphicon-arrow-left"> BACK TO LIST </a>
       
        <a href='/logout' id="logout-a" class="glyphicon glyphicon-log-out" type="submit"> LOG OUT</a>
    </div>

    <div class="box">
        <form action="/main/search-post" method="post" id="search_post">
            <!-- Form Submit -->
            <div class="form-submit mt-5" style="text-align: center;">
                <input name="searching_post" id="searching_post">
                <button class="btn btn-common" type="submit" id="search"> SEARCH POST <span class="glyphicon glyphicon-search"></span></button>
                <div id="msgSubmit" class="h3 text-center hidden"></div>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
        
    <div id="displaying-posts" class="box">
        <div class="container">
            <div class="row">   
                {{#no_result}}
                    <div  style="text-align: center;">
                        <div class="box-part text-center">
                            
                            <h1>{{this}}</h1>
                        </div>
                    </div>
                {{/no_result}}

                {{#search_result}}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                
                        <div class="box-part text-center">
                            
                            <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>
                            
                            <div class="title">
                                <h3> {{this.post_title}} </h3>
                            </div>
                            
                            <div class="text">
                                <span>{{this.post_content}}</span>
                            </div>
                            
                            <a class="read_more" href='/main/read_more?post_id={{this._id}}' type="submit"> Read More</a>                            
                        </div>
                    </div>	 
                {{/search_result}}

            </div>		
        </div>
    </div>
        

    <script type="text/javascript" src="/javascripts/main.js"></script>
        
    </body>
</html>


