<html class="wf-sourcesanspro-n6-active wf-sourcesanspro-n4-active wf-playfairdisplay-n7-active wf-active"
        lang="eng">
    <header>
        <meta charset="UTF-8">
        <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
        
        <title>
            {{title}}
        </title>
    </head>
    <body class="home page-template-default page page-id-7 wp-embed-responsive theme-blogxer woocommerce-js header-style-1 footer-style-1 no-sidebar right-sidebar product-grid-view elementor-default elementor-page elementor-page-7 top">
    
    <div class="header">
        <h1> Welcome, <b> {{username}} </b></h1>
        <p> Record you daily life on YouStar <span class="glyphicon glyphicon-comment"></span></p>
    </div>
    <div id="add-post-div" class="container">
        {{!-- <input id="add-post-input" value="Add Post" type="submit"> --}}
        <a href=# id="add-post-a" class=" glyphicon glyphicon-pencil" type="submit"> ADD POST</a>
        <a href='/main' id="back-to-list" class="glyphicon glyphicon-arrow-left" style="display: none;"> BACK TO LIST </a>
        <a href='/ownBlog' id="ownBlog" class="glyphicon glyphicon-list-alt" type="submit"> YOUR BLOGS </a>
        
        <a href='/main/favourite' id="favourite-a" class=" glyphicon glyphicon-heart " type="submit"> FAVOURITE</a>
        <a href='/logout' id="logout-a" class="glyphicon glyphicon-log-out" type="submit"> LOG OUT</a>
    </div>




    <div class="box" id="search_post">
        <div class="container"> 
            <form class="card card-sm" action="/main/search-post" method="post" >
                <div class="form-submit mt-5" style="text-align: center;">
                    <input class=" form-control-lg" type="search"  name="searching_post" id="searching_post">
                    <button class="btn btn-md btn-success" type="submit" id="search"> SEARCH POST <span class="glyphicon glyphicon-search"></span></button>
                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                    <div class="clearfix"></div>
                </div>
            </form>
        </div>
    </div>
    

    <div id="displaying-posts" class="box">
        <div class="container">
            <div class="row">
                
                {{#post_info}}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                
                        <div class="box-part text-center">
                            

                            <div style="text-align: right;">
                                <a href='/main/add-favourite?post_id={{this._id}}' class="favourite glyphicon glyphicon-heart-empty" aria-hidden="true"></a>
                            </div>

                            <div class="title">
                                <h3> {{this.post_title}} </h3>
                            </div>

                            <div class="text">
                                <span>{{this.post_content}}</span>
                            </div>
                            
                            
                            {{!-- <form method="POST" action="/main/read_mroe" > --}}
                                {{!-- <span name="post_id" style="display: none;"> {{this._id}} </span> --}}
                                <a class="read_more" href='/main/read_more/public?post_id={{this._id}}' type="submit"> Read More</a>
                            {{!-- </form> --}}
                            
                        </div>
                    </div>	 
                {{/post_info}}
            </div>		
        </div>
    </div>

    <div id="toast" class="toast" style="display: none;">
        <div class="toast-header">
            Alarm
        </div>
        <div class="toast-body">
            Post saved as favourite
        </div>
    </div>
       
    <div id="writing-posts" class="box" style="display: none;">
 
        <div class="container">
            <div class="col-md-12 wow animated fadeInRight" data-wow-delay=".2s">

                  <form action='/main/add-post' class="shake" role="form" method="post" id="Post-Form" name="post-form" data-toggle="validator">
                      <!-- TITLE -->
                      <div class="form-group label-floating">
                        <label class="control-label"> TITLE </label>
                        <input class="form-control" id="post-title" name='post_title' type="text" required data-error="Please enter your message subject">
                        <div class="help-block with-errors"></div>
                      </div>
                      <!-- CONTENT -->
                      <div class="form-group label-floating">
                          <label for="message" class="control-label">BODY</label>
                          <textarea class="form-control" id="post-content" name='post_content' required data-error="Write your message"></textarea>
                          <div class="help-block with-errors"></div>
                      </div>

                      <!-- Form Submit -->
                      <div class="form-submit mt-5" style="text-align: center;">
                          <button class="btn btn-common" type="submit" id="post-input"><i class="material-icons mdi mdi-message-outline"></i> UPLOAD POST <span class="glyphicon glyphicon-upload"></span></button>
                          <div id="msgSubmit" class="h3 text-center hidden"></div>
                          <div class="clearfix"></div>
                      </div>
                  </form>
                </div>
            </div>
    </div>
        
    <script type="text/javascript" src="/javascripts/main.js"></script>
        
    </body>
</html>


